<Window x:Class="ChatbotGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatbotGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" BorderBrush="#FFF13636" Background="#FFDCD3D3">
    <Grid Margin="0,0,0,8">
        <Rectangle HorizontalAlignment="Center" Height="100" Stroke="#FFE36969" VerticalAlignment="Top" Width="800" Fill="#FFB81818"/>
        <Label Content="Quiz Game" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Name="lblHeading" FontSize="36" FontWeight="Bold" Foreground="White"/>
        <Button Content="" HorizontalAlignment="Left" Margin="697,16,0,0" VerticalAlignment="Top" Height="68" Width="73" Click="Button_Click_1">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Screenshot 2025-06-05 131312.png"/>
            </Button.Background>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="340" Margin="0,100,0,0" Stroke="#FFD41919" VerticalAlignment="Top" Width="145" Fill="White"/>
        <Label Content="Questions:" HorizontalAlignment="Left" Margin="18,131,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <ScrollBar  LargeChange="1" SmallChange="1" Name="scrChangeQuestion" HorizontalAlignment="Left" Margin="87,200,0,0" VerticalAlignment="Top" ValueChanged="scrChangeQuestion_ValueChanged" Value="0" Minimum="0" Maximum="10" Orientation="Horizontal"/>
        <Label Content="0" Name="lblQuestionNo" HorizontalAlignment="Left" Margin="49,187,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Background="#FFD93A3A" Foreground="White"/>
        <ProgressBar Minimum="0" Maximum="10" HorizontalAlignment="Left" Height="11" Margin="18,361,0,0" VerticalAlignment="Top" Width="106" Name="pgbProgress"/>
        <Label Content="Your Progress:" HorizontalAlignment="Left" Margin="20,310,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="68" Margin="38,16,0,0" VerticalAlignment="Top" Width="84" Source="/Screenshot 2025-06-05 131251.png" Stretch="Fill"/>
        <Label Name="lblquestionHeading" Visibility="Collapsed" Content="How to spot a possible scam:" HorizontalAlignment="Left" Margin="150,177,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Content="True or False:" Visibility="Collapsed" HorizontalAlignment="Left" Margin="175,131,0,0" VerticalAlignment="Top" Name="questionTypelbl" RenderTransformOrigin="1.016,1.161" FontWeight="Bold" FontSize="20"/>
        <TextBox Name="txbAnswer" Visibility="Collapsed" HorizontalAlignment="Left" Margin="290,284,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149" Height="38" FontWeight="Bold"/>
        <CheckBox Name="cbx1" Visibility="Collapsed" Content="CheckBox" HorizontalAlignment="Left" Margin="200,242,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <CheckBox Name="cbx2" Visibility="Collapsed" Content="CheckBox" HorizontalAlignment="Left" Margin="200,274,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <CheckBox Name="cbx3" Visibility="Collapsed" Content="CheckBox" HorizontalAlignment="Left" Margin="200,337,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <CheckBox Name="cbx4" Visibility="Collapsed" Content="CheckBox" HorizontalAlignment="Left" Margin="200,307,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <CheckBox Name="cbx5" Visibility="Collapsed" Content="CheckBox" HorizontalAlignment="Left" Margin="200,366,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button Name="btnTrue" Visibility="Collapsed" Content="True" HorizontalAlignment="Left" Margin="470,257,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Width="54" Click="btnTrue_Click"/>
        <Button Name="btnFalse" Visibility="Collapsed" Content="False" HorizontalAlignment="Left" Margin="470,307,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="54" Click="btnFalse_Click"/>
        <Button Name="btnSubmit" Visibility="Collapsed" Content="Submit Question" HorizontalAlignment="Left" Margin="584,286,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Click="Button_Click" Height="65" Width="150"/>
        <Label Name="lblToFAnswer" Visibility="Collapsed" Content="Your answer:" HorizontalAlignment="Left" Margin="403,346,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Name="lblMark" Visibility="Collapsed" Content="You got the question right!" HorizontalAlignment="Left" Margin="318,250,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Background="#FFF10A0A"/>
        <Label Name="lblResults" Visibility="Collapsed" Content="You got 8/10" HorizontalAlignment="Left" Margin="167,248,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Background="#FFFF1515"/>

        
    </Grid>
</Window>
